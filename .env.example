# DB type: mysql | postgres | sqlite
DB_TYPE=mysql

# MySQL Database Configuration
MYSQL_HOST=your-mysql-host
MYSQL_PORT=3306
MYSQL_USER=your-username
MYSQL_PASSWORD=your-password
MYSQL_DATABASE=your-database

# PostgreSQL (used when DB_TYPE=postgres)
# POSTGRES_HOST=your-postgres-host
# POSTGRES_PORT=5432
# POSTGRES_USER=your-username
# POSTGRES_PASSWORD=your-password
# POSTGRES_DATABASE=your-database

# SQLite (used when DB_TYPE=sqlite)
# SQLITE_PATH=/absolute/path/to/database.sqlite

# LLM Configuration (choose one provider)
# OpenAI
# OPENAI_API_KEY=your-openai-api-key-here
# OPENAI_MODEL=gpt-4

# OpenRouter (OpenAI-compatible)
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_MODEL=z-ai/glm-5
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Vanna model default (used if provider-specific model not set)
# VANNA_MODEL=gpt-4
